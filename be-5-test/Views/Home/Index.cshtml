@{
    ViewData["Title"] = "Home Page";
}
@if (TempData["MessageSuccess"] is not null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MessageSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MessageError"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MessageError"]
    </div>
}



<h2 class="mt-3 mb-4">Verbali</h2>

@if (Model is null)
{
    <h2 class="mt-3 mb-4">Non ci sono verbali sul database</h2>
}
else
{
    <table class="table mb-5">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col" class="text-nowrap">Data Violazione</th>
                <th scope="col" class="text-nowrap">Indirizzo Violazione</th>
                <th scope="col" class="text-nowrap">Nominativo Agente</th>
                <th scope="col" class="text-nowrap">Data Trascrizione Verbale</th>
                <th scope="col">Importo</th>
                <th scope="col" class="text-nowrap">Decurtamento Punti</th>
                <th scope="col">Descrizione</th>
                <th scope="col" class="text-nowrap">Trasgressore</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var multa in Model)
            {
<tr>
    <td scope="col" style="text-align: center; vertical-align: middle;">@multa.IDVerbale</td>
    <td scope="col" style="text-align: center; vertical-align: middle;">@multa.DataViolazione.ToShortDateString()</td>
    <td scope="col" style="text-align: center; vertical-align: middle;">@multa.IndirizzoViolazione</td>
    <td scope="col" style="text-align: center; vertical-align: middle;">@multa.Nominativo_Agente</td>
    <td scope="col" style="text-align: center; vertical-align: middle;">@multa.DataTrascrizioneVerbale.ToShortDateString()</td>
    <td scope="col" style="text-align: center; vertical-align: middle;">@multa.Importo.ToString("#,00.##")</td>
    <td scope="col" style="text-align: center; vertical-align: middle;">@multa.DecurtamentoPunti</td>
    <td scope="col" class="text-nowrap" style="text-align: center; vertical-align: middle;">@multa.Descrizione</td>
    <td scope="col" style="text-align: center; vertical-align: middle;">
        <a class="btn btn-outline-secondary text-nowrap" asp-controller="Home" asp-action="Anagrafica" asp-route-id="@multa.IDAnagrafica">Anagrafica Trasgressore</a>
    </td>
</tr>

            }
        </tbody>
    </table>
}
